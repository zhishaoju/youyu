<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/my_bg"
  android:orientation="vertical">
  <!-- <TextView
     android:id="@+id/tv_login"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_gravity="center"
     android:gravity="center"
     android:text="点我登录"
     android:textColor="@color/black"
     android:textSize="@dimen/font_20"
     android:visibility="gone" />-->

  <LinearLayout
    android:id="@+id/ll_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_register_bg"
    android:orientation="vertical"
    android:paddingLeft="60dp"
    android:paddingRight="60dp"
    android:visibility="gone">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="100dp"
      android:text="欢迎回来"
      android:textColor="@color/black"
      android:textSize="30sp" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Welcome"
      android:textColor="#BEBEBE"
      android:textSize="12sp" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="50dp"
      android:text="输入手机号"
      android:textColor="@color/black"
      android:textSize="12sp" />

    <EditText
      android:id="@+id/et_phone"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:layout_marginTop="16dp"
      android:background="@drawable/corner_login_bg"
      android:gravity="center_vertical"
      android:hint="请输入正确的手机号"
      android:inputType="number"
      android:paddingLeft="20dp"
      android:textColorHint="#cececb"
      android:textCursorDrawable="@null"
      android:textSize="@dimen/font_14" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:text="输入密码"
      android:textColor="@color/black"
      android:textSize="12sp" />

    <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="40dp"
      android:layout_marginTop="16dp">

      <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/corner_login_bg"
        android:gravity="center_vertical"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:textColorHint="#cececb"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/font_14" />

      <FrameLayout
        android:id="@+id/fl_pass_icon"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <ImageView
          android:id="@+id/iv_pass_icon"
          android:layout_width="wrap_content"
          android:layout_height="16dp"
          android:layout_gravity="center_vertical"
          android:src="@mipmap/pass_hide" />
      </FrameLayout>
    </RelativeLayout>

    <TextView
      android:id="@+id/tv_forget_password"
      android:layout_width="wrap_content"
      android:layout_height="30dp"
      android:layout_gravity="right"
      android:layout_marginRight="20dp"
      android:gravity="center_vertical"
      android:text="忘记密码"
      android:textColor="@color/be"
      android:textSize="12sp" />

    <Button
      android:id="@+id/bt_login"
      style="@style/ButtonStyle"
      android:layout_marginTop="38dp"
      android:background="@drawable/corner_bg"
      android:text="登录" />

    <Button
      android:id="@+id/bt_register"
      style="@style/ButtonStyle"
      android:layout_marginTop="38dp"
      android:background="@drawable/corner_yellow_bg"
      android:text="注册"
      android:textColor="@color/black" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="30dp"
      android:layout_marginTop="20dp"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:visibility="invisible">

      <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="3"
        android:background="@color/be" />

      <TextView
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="or"
        android:textColor="@color/be"
        android:textSize="16sp" />

      <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="3"
        android:background="@color/be" />
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:visibility="invisible">

      <FrameLayout
        android:id="@+id/fl_chat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginLeft="20dp"
          android:src="@mipmap/chat" />
      </FrameLayout>

      <FrameLayout
        android:id="@+id/fl_qq"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginRight="20dp"
          android:src="@mipmap/qq" />
      </FrameLayout>
    </LinearLayout>

  </LinearLayout>
  <LinearLayout
    android:id="@+id/ll_my_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_bg"
    android:orientation="vertical"
    android:visibility="visible">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:orientation="horizontal"
      android:paddingLeft="16dp"
      android:paddingRight="16dp">

      <com.youyu.gao.xiao.view.CircleImageView
        android:id="@+id/civ_head_pic"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher_round" />

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:orientation="vertical">

        <TextView
          android:id="@+id/tv_head_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:text="情迷意大利"
          android:textColor="@color/my_head"
          android:textSize="18sp" />

        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <TextView
            style="@style/MyHeadTvStyle"
            android:layout_marginLeft="0dp"
            android:text="发帖" />

          <TextView
            android:id="@+id/tv_guanzhu_num"
            style="@style/MyHeadTvStyle"
            android:text="95" />

          <TextView
            style="@style/MyHeadTvStyle"
            android:layout_marginLeft="15dp"
            android:text="粉丝" />

          <TextView
            android:id="@+id/tv_fensi"
            style="@style/MyHeadTvStyle"
            android:text="95" />

          <TextView
            style="@style/MyHeadTvStyle"
            android:layout_marginLeft="15dp"
            android:text="点赞" />

          <TextView
            android:id="@+id/tv_zan"
            style="@style/MyHeadTvStyle"
            android:text="95" />

          <TextView
            style="@style/MyHeadTvStyle"
            android:layout_marginLeft="15dp"
            android:text="评论" />

          <TextView
            android:id="@+id/tv_pinglun"
            style="@style/MyHeadTvStyle"
            android:text="95" />

        </LinearLayout>
      </LinearLayout>

    </LinearLayout>

    <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="160dp"
      android:layout_marginTop="50dp"
      android:background="@color/white"
      android:orientation="vertical">

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:background="@mipmap/shouru">

        <TextView
          style="@style/MyHeadTvStyle"
          android:layout_marginLeft="50dp"
          android:layout_marginTop="28dp"
          android:text="我的收入"
          android:textColor="@color/white" />

        <LinearLayout
          android:id="@+id/ll_incoming_detail"
          android:layout_width="90dp"
          android:layout_height="26dp"
          android:layout_alignParentRight="true"
          android:layout_marginLeft="50dp"
          android:layout_marginTop="30dp"
          android:layout_marginRight="40dp"
          android:background="@drawable/corner_incoming_bg"
          android:gravity="center_vertical">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="收入明细"
            android:textColor="@color/incoming_bg" />

          <ImageView
            android:layout_width="10dp"
            android:layout_height="12dp"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/shouru1" />
        </LinearLayout>


        <TextView
          android:id="@+id/tv_incoming"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/ll_incoming_detail"
          android:layout_marginLeft="50dp"
          android:text="1000.00 元"
          android:textColor="@color/white"
          android:textSize="@dimen/font_18" />
      </RelativeLayout>

    </FrameLayout>

    <LinearLayout
      android:id="@+id/ll_collect"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_marginTop="6dp"
      android:background="@color/white"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:paddingLeft="@dimen/margin_16"
      android:paddingRight="@dimen/margin_16">

      <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:src="@mipmap/shoucang1" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="我的收藏"
        android:textColor="@color/my_head"
        android:textSize="18sp" />

      <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

      <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@mipmap/arrow" />
    </LinearLayout>

    <LinearLayout
      android:id="@+id/ll_active"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_marginTop="6dp"
      android:background="@color/white"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:paddingLeft="@dimen/margin_16"
      android:paddingRight="@dimen/margin_16">

      <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:src="@mipmap/wode2" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="我的活动"
        android:textColor="@color/my_head"
        android:textSize="18sp" />

      <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

      <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@mipmap/arrow" />
    </LinearLayout>
    <LinearLayout
      android:id="@+id/ll_task"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_marginTop="6dp"
      android:background="@color/white"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:paddingLeft="@dimen/margin_16"
      android:paddingRight="@dimen/margin_16">

      <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:src="@android:drawable/ic_media_play" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="任务中心"
        android:textColor="@color/my_head"
        android:textSize="18sp" />

      <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

      <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@mipmap/arrow" />
    </LinearLayout>

    <LinearLayout
      android:id="@+id/ll_trade_policy"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_marginTop="6dp"
      android:background="@color/white"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:paddingLeft="@dimen/margin_16"
      android:paddingRight="@dimen/margin_16">

      <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:src="@android:drawable/ic_partial_secure" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="隐私和政策"
        android:textColor="@color/my_head"
        android:textSize="18sp" />

      <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

      <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@mipmap/arrow" />
    </LinearLayout>

    <LinearLayout
      android:id="@+id/ll_suggest"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_marginTop="6dp"
      android:background="@color/white"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:paddingLeft="@dimen/margin_16"
      android:paddingRight="@dimen/margin_16">

      <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:src="@android:drawable/ic_menu_help" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="问题反馈"
        android:textColor="@color/my_head"
        android:textSize="18sp" />

      <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

      <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@mipmap/arrow" />
    </LinearLayout>
  </LinearLayout>
</FrameLayout>
