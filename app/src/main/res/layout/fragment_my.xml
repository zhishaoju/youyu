<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/my_bg"
  android:orientation="vertical">
  <TextView
    android:id="@+id/tv_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:text="点我登录"
    android:textColor="@color/black"
    android:textSize="@dimen/font_20"
    android:visibility="gone" />
  <LinearLayout
    android:id="@+id/ll_my_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_bg"
    android:orientation="vertical"
    android:visibility="visible">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:orientation="horizontal"
      android:paddingLeft="16dp"
      android:paddingRight="16dp">

      <com.youyu.view.CircleImageView
        android:id="@+id/civ_head_pic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_launcher_round" />

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:orientation="vertical">

        <TextView
          android:id="@+id/tv_head_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:text="情迷意大利"
          android:textColor="@color/my_head"
          android:textSize="18sp" />

        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <TextView
            style="@style/MyHeadTvStyle"
            android:layout_marginLeft="0dp"
            android:text="发帖" />

          <TextView
            android:id="@+id/tv_guanzhu_num"
            style="@style/MyHeadTvStyle"
            android:text="95" />

          <TextView
            style="@style/MyHeadTvStyle"
            android:layout_marginLeft="15dp"
            android:text="粉丝" />

          <TextView
            android:id="@+id/tv_fensi"
            style="@style/MyHeadTvStyle"
            android:text="95" />

          <TextView
            style="@style/MyHeadTvStyle"
            android:layout_marginLeft="15dp"
            android:text="点赞" />

          <TextView
            android:id="@+id/tv_zan"
            style="@style/MyHeadTvStyle"
            android:text="95" />

          <TextView
            style="@style/MyHeadTvStyle"
            android:layout_marginLeft="15dp"
            android:text="评论" />

          <TextView
            android:id="@+id/tv_pinglun"
            style="@style/MyHeadTvStyle"
            android:text="95" />

        </LinearLayout>
      </LinearLayout>

    </LinearLayout>

    <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="160dp"
      android:layout_marginTop="50dp"
      android:background="@color/white"
      android:orientation="vertical">

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:background="@mipmap/shouru">

        <TextView
          style="@style/MyHeadTvStyle"
          android:layout_marginLeft="50dp"
          android:layout_marginTop="28dp"
          android:text="我的收入"
          android:textColor="@color/white" />

        <LinearLayout
          android:id="@+id/ll_incoming_detail"
          android:layout_width="90dp"
          android:layout_height="26dp"
          android:layout_alignParentRight="true"
          android:layout_marginLeft="50dp"
          android:layout_marginTop="30dp"
          android:layout_marginRight="40dp"
          android:background="@drawable/corner_incoming_bg"
          android:gravity="center_vertical">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="收入明细"
            android:textColor="@color/incoming_bg" />

          <ImageView
            android:layout_width="10dp"
            android:layout_height="12dp"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/shouru1" />
        </LinearLayout>


        <TextView
          android:id="@+id/tv_incoming"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/ll_incoming_detail"
          android:layout_marginLeft="50dp"
          android:text="1000.00 元"
          android:textColor="@color/white"
          android:textSize="@dimen/font_18" />
      </RelativeLayout>

    </FrameLayout>

    <LinearLayout
      android:id="@+id/ll_collect"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:layout_marginTop="6dp"
      android:background="@color/white"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:paddingLeft="@dimen/margin_16"
      android:paddingRight="@dimen/margin_16">

      <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:src="@mipmap/shoucang1" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="我的收藏"
        android:textColor="@color/my_head"
        android:textSize="18sp" />

      <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

      <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@mipmap/arrow" />
    </LinearLayout>

    <LinearLayout
      android:id="@+id/ll_active"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:layout_marginTop="6dp"
      android:background="@color/white"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:paddingLeft="@dimen/margin_16"
      android:paddingRight="@dimen/margin_16">

      <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:src="@mipmap/wode2" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="我的活动"
        android:textColor="@color/my_head"
        android:textSize="18sp" />

      <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

      <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@mipmap/arrow" />
    </LinearLayout>
  </LinearLayout>
</FrameLayout>
