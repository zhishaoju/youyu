<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@mipmap/login_register_bg"
  android:orientation="vertical"
  android:paddingLeft="60dp"
  android:paddingRight="60dp">

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="100dp"
    android:text="找回密码"
    android:textColor="@color/black"
    android:textSize="30sp" />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Find"
    android:textColor="#BEBEBE"
    android:textSize="12sp" />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:text="手机号"
    android:textColor="@color/black"
    android:textSize="12sp" />

  <EditText
    android:id="@+id/et_phone"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginTop="16dp"
    android:background="@drawable/corner_login_bg"
    android:gravity="center_vertical"
    android:hint="请输入正确的手机号"
    android:inputType="number"
    android:paddingLeft="20dp"
    android:textColorHint="#cececb"
    android:textCursorDrawable="@null"
    android:textSize="@dimen/font_14" />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:text="重新设定密码"
    android:textColor="@color/black"
    android:textSize="12sp" />

  <EditText
    android:id="@+id/et_pass"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginTop="16dp"
    android:background="@drawable/corner_login_bg"
    android:gravity="center_vertical"
    android:hint="请输入密码"
    android:inputType="number"
    android:paddingLeft="20dp"
    android:textColorHint="#cececb"
    android:textCursorDrawable="@null"
    android:textSize="@dimen/font_14" />

  <Button
    android:id="@+id/bt_login"
    style="@style/ButtonStyle"
    android:layout_marginTop="58dp"
    android:background="@drawable/corner_bg"
    android:text="登录" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:layout_marginTop="20dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <View
      android:layout_width="0dp"
      android:layout_height="1dp"
      android:layout_weight="3"
      android:background="@color/be" />

    <TextView
      android:layout_width="0dp"
      android:layout_height="30dp"
      android:layout_weight="1"
      android:gravity="center"
      android:text="or"
      android:textColor="@color/be"
      android:textSize="16sp" />

    <View
      android:layout_width="0dp"
      android:layout_height="1dp"
      android:layout_weight="3"
      android:background="@color/be" />
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <FrameLayout
      android:id="@+id/fl_chat"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1">

      <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:src="@mipmap/chat" />
    </FrameLayout>

    <FrameLayout
      android:id="@+id/fl_qq"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1">

      <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="20dp"
        android:src="@mipmap/qq" />
    </FrameLayout>
  </LinearLayout>

</LinearLayout>
